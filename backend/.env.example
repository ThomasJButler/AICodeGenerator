# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# Application Settings
APP_NAME="AI Code Generator"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=10000
API_PREFIX=/api

# CORS Settings (Update with your actual frontend domain)
CORS_ORIGINS=["https://your-frontend-domain.com"]

# Redis Cache (optional - set to False for basic deployment)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
USE_CACHE=False

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Security (Generate a new secret key for production)
SECRET_KEY=your-32-character-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# Generation Limits
MAX_CONCURRENT_GENERATIONS=3
MAX_CODE_LENGTH=10000
MAX_PROMPT_LENGTH=2000